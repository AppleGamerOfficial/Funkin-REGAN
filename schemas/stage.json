{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/zatrit/Funkin-REGEN-ext/master/schemas/stage.json",
    "title": "REGEN stage",
    "items": {"properties": {
        "name":{
            "type":"string",
            "description": "Stage name",
            "default":"stage"
        },
        "camZoom":{
            "type":"number",
            "minimum": 0,
            "description": "Camera Zoom",
            "default":"0.9"
        },
        "library":{
            "type":"string",
            "description": "Assets library",
            "default":"shared"
        },
        "objects":{
            "type":"array",
            "description": "Array of objects",
            "required":["name","map","position","defaultAnimation","animations"],
            "additionalItems": {
                "properties": {
                    "name":{
                        "description": "Object name",
                        "type":"string"
                    },
                    "map":{
                        "description": "Add to objects map",
                        "type":"boolean",
                        "default":"false"
                    },
                    "position":{
                        "type":"array",
                        "default":["0","0"]
                    },
                    "defaultAnimation":{
                        "default":"",
                        "type":"string"
                    },
                    "animations":{
                        "description": "Animation",
                        "type":"array",
                        "additionalItems": {
                            "properties": {
                                "fps":{
                                    "type":"integer",
                                    "default":"24",
                                    "description": "Framerate of animation"
                                },
                                "prefix":{
                                    "type":"string",
                                    "description": "Animation prefix"
                                },
                                "name":{
                                    "type":"string",
                                    "description": "Animation name"
                                }
                            }
                        },
                        "required":["fps","prefix","name"]
                    }
                }
            }
        }
    }},
   "required": ["name", "camZoom", "library","objects"]
}